<?xml version="1.0" encoding="utf-8"?>

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:fillViewport="true"
	    >
		
		<LinearLayout 
		    android:id="@+id/top_level"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >
	        
			<TextView 
			    android:id="@+id/name_field"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textSize="36sp" />
			
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="SPECIAL DATES"
		        android:textSize="18sp"/>
		    
			<LinearLayout
			    android:id="@+id/main_first_insert_point_dates"
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			</LinearLayout>
		
			<LinearLayout
			    android:id="@+id/after_main_first_insert_point_dates"
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			</LinearLayout>
		    
			    
			<TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="SPECIAL NOTES"
		        android:textSize="18sp"/>
			
			<LinearLayout
			    android:id="@+id/main_first_insert_point_info"
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			</LinearLayout>
		
			<LinearLayout
			    android:id="@+id/after_main_first_insert_point_info"
			    android:layout_width="match_parent" 
			    android:layout_height="wrap_content"
			    android:orientation="vertical">
			</LinearLayout>
		
		</LinearLayout>
	</ScrollView>
	




